<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.LoginActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="148dp"
        android:layout_height="127dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo_essy"
        android:layout_marginTop="70dp"
        />

    <!-- Mulai TextView -->

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="87dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Mari\nKita"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/start_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_text"
        android:layout_alignStart="@id/start_text"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-44dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Mulai!"
        android:textColor="#1C5061"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@id/start_text"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="#F8F8FA"
        android:drawableStart="@drawable/ic_android_black_24dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="31dp"
        android:hint="Username"
        android:textSize="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@id/username"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="#F8F8FA"
        android:drawableStart="@drawable/ic_android_black_24dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="Password"
        android:textSize="12dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="31dp"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_marginTop="37dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#6C63FF"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="31dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppinsregular"
        android:text="Masuk" />

    <TextView
        android:id="@+id/start_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="441dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Belum Memiliki Akun?"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/start_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_text"
        android:layout_alignStart="@id/start_text"
        android:layout_marginStart="211dp"
        android:layout_marginTop="276dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Daftar!"
        android:textColor="#6C63FF"
        android:textSize="13sp"
        android:textStyle="normal" />

</RelativeLayout>
