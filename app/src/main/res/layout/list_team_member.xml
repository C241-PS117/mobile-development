<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rounded_10"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/black"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/txt_username_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krisna Choiril Andika"
            android:layout_below="@id/circle_profile"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppinsbold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_email_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="khrisnandika15@gmail.com"
            android:layout_below="@id/txt_username_card"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_email_card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_linkedin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_linkedin"
                />
            <ImageView
                android:id="@+id/image_instagram"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_instagram"
                android:layout_marginStart="5dp"
                />

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>