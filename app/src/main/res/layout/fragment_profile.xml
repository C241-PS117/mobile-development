<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:background="@drawable/blur_bg"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="Profil Saya"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <RelativeLayout
        android:id="@+id/layout_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@color/black"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"

            />

        <LinearLayout
            android:id="@+id/layout_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/circle_profile"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Krisna"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="khrisnandika15@gmail.com"
                android:layout_below="@+id/hometext1"
                android:fontFamily="@font/poppinsregular"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginTop="-10dp"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_edit"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_15"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btn_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/ic_password"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ubah_sandi_logo"/>
            <TextView
                android:id="@+id/txt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Kata Sandi"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_password"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_15"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btn_informasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/ic_informasi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_informasi"/>
            <TextView
                android:id="@+id/txt_informasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Aplikasi"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_informasi"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_15"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btn_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/ic_team"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_team"/>
            <TextView
                android:id="@+id/txt_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tim Kami"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_team"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_15"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/ic_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_logout"/>
            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keluar"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_logout"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>